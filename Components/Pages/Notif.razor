@page "/notif"

<div class="w-full max-w-xs bg-white shadow-lg rounded-lg">
  <div class="p-4 border-b">
    <h2 class="text-lg font-semibold">Notifications</h2>
    <p class="text-sm text-gray-600">Vous avez 3 messages non lus.</p>
  </div>
  <div class="p-4">
    <div class="mb-4 grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
      <span class="flex h-2 w-2 translate-y-1.5 rounded-full bg-blue-500"></span>
      <div class="grid gap-1">
        <p class="text-sm font-medium">Votre appel a été confirmé.</p>
        <p class="text-sm text-gray-500 dark:text-gray-400">Il y a 5 minutes</p>
      </div>
    </div>
    <div class="mb-4 grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
      <span class="flex h-2 w-2 translate-y-1.5 rounded-full bg-blue-500"></span>
      <div class="grid gap-1">
        <p class="text-sm font-medium">Vous avez un nouveau message !</p>
        <p class="text-sm text-gray-500 dark:text-gray-400">Il y a 1 minute</p>
      </div>
    </div>
    <div class="mb-4 grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
      <span class="flex h-2 w-2 translate-y-1.5 rounded-full bg-blue-500"></span>
      <div class="grid gap-1">
        <p class="text-sm font-medium">Votre abonnement expire bientôt !</p>
        <p class="text-sm text-gray-500 dark:text-gray-400">Il y a 2 heures</p>
      </div>
    </div>
  </div>
</div>
