@using BlazorApp.Components.Service
@inject UserService userService
@inject PasswordHandler passHandler
<style>
  body {
    margin: 30;
    padding: 0;
    background-image: url('/Reseau.jpg');
    background-size: cover;
    background-position: center;
    height: 100vh;
  }

  .box {
    position: relative;
    height: 630px;
    width: 450px;
    font-family: Helvetica;
