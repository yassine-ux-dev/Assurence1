@code {
  private Admin A { get; set; } = new();

  private void Annuler()
  {
    Navigation.NavigateTo("/");


  }
  private void Logout()
  {
    userService.DeleteEmailIdCookie();
    userService.DeleteRoleCookie();
    Navigation.NavigateTo("/login");

  }
}