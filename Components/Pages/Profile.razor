@page "/parametre"
@using BlazorApp.Components.Model
@using Microsoft.EntityFrameworkCore
@inject NavigationManager Navigation
@using BlazorApp.Components.Service
@inject AoService aoService
@inject UserService userService
@using System


@if (clt != null)
{
  <EditForm Model="@clt" OnValidSubmit="@Update" FormName="Posttd" class="w-full" method="post" style="margin-top: 20px;">
    <DataAnnotationsValidator />

    <div>
      <h4 class="q-pl-sm-md" style="margin-left:460px">Profil et connexion</h4>
